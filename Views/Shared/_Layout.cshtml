<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Sets character encoding so text displays correctly -->
    <meta charset="utf-8" />

    <!-- Makes site responsive on all devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Page title: combines the View's title with the app name -->
    <title>@ViewData["Title"] - ABCRetailers</title>

    <!-- Placeholder for future JavaScript import mapping -->
    <script type="importmap"></script>

    <!-- Bootstrap CSS framework -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Your custom site-wide CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Auto-generated app styles -->
    <link rel="stylesheet" href="~/ABCRetailers.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Header / Navigation bar -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Logo / Brand link to Home page -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ABCRetailers</a>

                <!-- Collapsible toggle button (for mobile view) -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Main navigation menu -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Home link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <!-- Customer link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="Index">Customer</a>
                        </li>

                        <!-- Product link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Product</a>
                        </li>

                        <!-- Order link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="Index">Order</a>
                        </li>

                        <!-- Privacy link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <!-- Contact link-->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Contact">Contact Us</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main page content (changes depending on view) -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody() <!-- This is where each view's content will appear -->
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ABCRetailers - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- JavaScript libraries -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Allows pages to inject custom scripts if needed -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
