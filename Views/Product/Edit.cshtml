@model ABCRetailers.Models.Product
@inject IHttpContextAccessor HttpContextAccessor


@{
    ViewData["Title"] = "Edit Product";
    var role = HttpContextAccessor.HttpContext?.Session.GetString("Role");
}

// Only show the form if Admin
@if (role == "Admin")
{
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="RowKey" />
        <input type="hidden" name="ETag" value="@Model.ETag.ToString()" />

        <div class="form-group">
            <label asp-for="ProductName" class="control-label"></label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" type="number" step="0.01" min="0" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="StockAvailable" class="control-label"></label>
            <input asp-for="StockAvailable" class="form-control" />
            <span asp-validation-for="StockAvailable" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Current Image</label><br />
            @if (!string.IsNullOrEmpty(Model.ImageURL))
            {
                <img src="@Model.ImageURL" alt="@Model.ProductName" style="max-width:200px;" />
            }
        </div>

        <div class="form-group">
            <label asp-for="ImageFile" class="control-label">Upload New Image</label>
            <input asp-for="ImageFile" type="file" class="form-control-file" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
}
else
{
    <div class="alert alert-danger">You do not have permission to edit products.</div>
}
