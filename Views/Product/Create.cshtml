@model ABCRetailers.Models.Product
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Create Product";
    var role = HttpContextAccessor.HttpContext?.Session.GetString("Role");
}



@if (role == "Admin")
{
    <h2>Create Product</h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="ProductName" class="control-label"></label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" type="number" step="0.01" min="0" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="StockAvailable" class="control-label"></label>
            <input asp-for="StockAvailable" class="form-control" />
            <span asp-validation-for="StockAvailable" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageFile" class="control-label">Upload Image</label>
            <input asp-for="ImageFile" type="file" class="form-control-file" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
}
else
{
    <div class="alert alert-danger">You do not have permission to create products.</div>
}
