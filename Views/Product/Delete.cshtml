@model ABCRetailers.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>

<div>
    <h4>Are you sure you want to delete this product?</h4>
    <div>
        <dl class="row">
            <dt class="col-sm-2">Product Name</dt>
            <dd class="col-sm-10">@Model.ProductName</dd>

            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Model.Description</dd>

            <dt class="col-sm-2">Price</dt>
            <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

            <dt class="col-sm-2">Stock</dt>
            <dd class="col-sm-10">@Model.StockAvailable</dd>

            <dt class="col-sm-2">Image</dt>
            <dd class="col-sm-10">
                @if (!string.IsNullOrEmpty(Model.ImageURL))
                {
                    <img src="@Model.ImageURL" alt="@Model.ProductName" style="max-width:200px;" />
                }
            </dd>
        </dl>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="RowKey" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
