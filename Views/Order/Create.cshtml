@model ABCRetailers.Models.Order

@{
    var role = Context.Session.GetString("Role");
    var username = Context.Session.GetString("Username");

    var currentCustomer = role != "Admin" && ViewBag.Customers != null
        ? (ViewBag.Customers as List<ABCRetailers.Models.Customer>)?.FirstOrDefault()
        : null;
}

<h2>Create Order</h2>

<form asp-action="Create" method="post">
    @if (role == "Admin")
    {
        <div class="form-group">
            <label asp-for="CustomerId" class="control-label">Customer</label>
            <select asp-for="CustomerId" class="form-control" asp-items="@(new SelectList(ViewBag.Customers, "RowKey", "Name"))">
                <option value="">-- Select Customer --</option>
            </select>
        </div>
    }
    else if (currentCustomer != null)
    {
        <div class="form-group">
            <label>Customer</label>
            <input type="text" class="form-control" value="@currentCustomer.Name" readonly />
            <input type="hidden" asp-for="CustomerId" value="@currentCustomer.RowKey" />
        </div>
    }
    else
    {
        <div class="alert alert-danger">Customer record not found. Cannot create order.</div>
    }

    <div class="form-group">
        <label asp-for="ProductId" class="control-label">Product</label>
        <select asp-for="ProductId" class="form-control" asp-items="@(new SelectList(ViewBag.Products, "RowKey", "ProductName"))">
            <option value="">-- Select Product --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Status"></label>
        <input asp-for="Status" class="form-control" value="Submitted" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
