@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <!-- Dashboard Card -->
            <div class="card shadow-sm border-0" style="background-color:#f8f9fa;">
                <div class="card-header text-center" style="background-color:#212529; color:white;">
                    <h2>@ViewBag.Message</h2>
                </div>
                <div class="card-body text-center">
                    <p class="lead mb-4">
                        Here you can manage products and view all orders.
                    </p>

                    <div class="d-flex justify-content-center gap-3 flex-wrap">
                        <!-- Products Button -->
                        <a asp-controller="Product" asp-action="Index" class="btn btn-dark btn-lg shadow-sm">
                            🛍️ Manage Products
                        </a>

                        <!-- Orders Button -->
                        <a asp-controller="Cart" asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
                            📦 View All Orders
                        </a>
                    </div>

                    <p class="mt-4 text-muted">
                        Use this dashboard to efficiently manage the store and keep track of all customer orders.
                    </p>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    body, h2, p, a, .card {
        font-family: "Times New Roman", Times, serif !important;
    }

    .card {
        border-radius: 15px;
    }

    .btn-lg {
        padding: 0.75rem 1.5rem;
        font-weight: bold;
        border-radius: 10px;
    }

    a.btn-dark:hover, a.btn-secondary:hover {
        opacity: 0.85;
        transition: 0.3s;
    }
</style>
